{% extends 'base.html.twig' %}

{% block innerPage %}

    <div class="hero inner-page" style="background-image: url('{{ asset('assets/images/hero_1_a.jpg') }}');">

        <div class="container">
            <div class="row align-items-end ">
                <div class="col-lg-5">

                    <div class="intro">
                        <h1><strong>Catalogo Ebike</strong></h1>
                        <div class="custom-breadcrumbs"><a href="{{ path('home') }}">Home</a> <span class="mx-2">/</span> <strong>Ebike</strong></div>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block content %}

    <div class="row">
        {% for product in products %}
        <div class="col-md-6 col-lg-4 mb-4">

            <div class="listing d-block  align-items-stretch text-center">
                <div class="listing-img h-100 mr-4">
                    <img src="/uploads/{{ product.illustration }}" alt="Image" class="img-fluid">
                </div>
                <div class="listing-contents h-100">
                    <h3>{{ product.name }}</h3>
                    <div>
                        <p>{{ product.subtitle }}</p>
                        <p><a href="#" class="btn btn-primary btn-sm">Noleggia ora</a></p>
                    </div>
                </div>

            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}
