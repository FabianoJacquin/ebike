{% extends 'base.html.twig' %}

{% block innerPage %}

    <div class="hero inner-page" style="background-image: url('{{ asset('assets/images/hero_1_a.jpg') }}');">

        <div class="container">
            <div class="row align-items-end ">
                <div class="col-lg-5">

                    <div class="intro">
                        <h1><strong>Catalogo Ebike</strong></h1>
                        <div class="custom-breadcrumbs"><a href="{{ path('home') }}">Home</a> <span class="mx-2">/</span> <a href="{{ path('products') }}">Ebike</a> <span class="mx-2">/</span> <strong>{{ product.name }}</strong></div>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="listing d-block  align-items-stretch text-center">
                <div class="listing-img h-100 mr-4">
                    <img src="/uploads/{{ product.illustration }}" alt="Image" class="img-fluid">
                </div>
                <div class="listing-contents h-100">
                    <h3>{{ product.name }}</h3>
                    <div>
                        <p>{{ product.subtitle }}</p>
                        <p>{{ product.description }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 mb-4">
            <p><a href="{{ path('add_to_cart', {'id' : product.id}) }}" class="btn btn-primary btn-sm">Conferma noleggio</a></p>
        </div>
    </div>

{% endblock %}
