{% extends 'base.html.twig' %}

{% block hero %}
    <div class="hero" style="background-image: url('{{ asset('assets/images/hero_1_a.jpg') }}');">

        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-10">

                    <div class="row mb-5">
                        <div class="col-lg-7 intro">
                            <h1><strong>Noleggia la tua e-bike</strong> con un click.</h1>
                        </div>
                    </div>

                    <form class="trip-form" method="post" action="{{ path('search') }}">

                        <div class="row align-items-center">

                            <div class="mb-2 mb-md-0 col-md-2">
                                <select name="tipo" id="" class="custom-select form-control">
                                    <option value="Tipo">Tipo</option>
                                    {% for category in categories %}
                                        <option value="{{ category.name }}">{{ category.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="mb-2 mb-md-0 col-md-2">
                                <select name="taglia" id="" class="custom-select form-control">
                                    <option value="Taglia">Taglia</option>
                                    {% for size in sizes %}
                                    <option value="{{ size.name }}">{{ size.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="mb-3 mb-md-0 col-md-3">
                                <div class="form-control-wrap">
                                    <input type="text" id="cf-3" placeholder="Data Inizio" class="form-control datepicker px-3">
                                    <span class="icon icon-date_range"></span>

                                </div>
                            </div>
                            <div class="mb-3 mb-md-0 col-md-3">
                                <div class="form-control-wrap">
                                    <input type="text" id="cf-4" placeholder="Data Fine" class="form-control datepicker px-3">
                                    <span class="icon icon-date_range"></span>
                                </div>
                            </div>
                            <div class="mb-2 mb-md-0 col-md-2">
                                <input type="submit" value="Ricerca" class="btn btn-primary btn-block py-3">
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
{% endblock %}